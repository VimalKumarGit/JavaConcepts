public class StringMethods2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String names = "Apple Banana Pineapple Grapes";
		System.out.println(names.toLowerCase());//toLowerCase()
		System.out.println(names.toUpperCase());//toUpperCase()
		
		String email = "VimalKumar1234@$%&@gmail.com";
		
		StringMethods2 s = new StringMethods2();
		s.converttoLowerCase(email);
		

	}

	private void converttoLowerCase(String input) {
		
		for(int i=0; i<input.length(); i++)
		{
			if(input.toLowerCase().charAt(i)>='a' && input.toLowerCase().charAt(i)<='z') // to print nos in string
			{
				//continue;//not to print nos in the string, remaining will be printed
				//System.out.print(input.charAt(i));//prints nos only from string
				//continue;
				System.out.print(input.charAt(i));
			}
			/*else if(input.charAt(i)>='a' && input.charAt(i)<='z')
			{
				continue;
			}*/
				
			//System.out.print(input.charAt(i));
		}
		
	}

}
