public class NestedIfConcept {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int a = 20, b = 22, c = 40, max = 0;
		
		if(a>b)
		{
			if(a>c)
			{
				max=a;
			}
		}else {
			if(b>c)
			{
				if(b>a)
				{
					max=b;
				}
			}
			else {
				max=c;
			}
		}
		
		System.out.println("Largest is "+max);

	}

}
