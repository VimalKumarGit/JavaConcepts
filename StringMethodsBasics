public class StringMethods {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String s = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
		char[] a = s.toCharArray();//toCharyArray
		for(int i=0; i<a.length; i++)
		{
			System.out.print(a[i]+" ");
		}
		System.out.println();
		System.out.println(s.charAt(5));//charAt
		
		int position = s.indexOf('G');//indexOf
		System.out.println(position);
		
		int last = s.lastIndexOf('Z');//lastindexOf
		System.out.println(last);
		
		boolean result = s.contains("BCD");//contains
		System.out.println(result);
		System.out.println(s.contains("bcd"));
		
		String r = "Vimal Singaram Vidya Latha";	
		
		System.out.println(r.endsWith("Vimal"));//endsWith
		System.out.println(r.endsWith("Latha"));
		System.out.println(r.startsWith("Vimal"));//startsWith

	}

}
