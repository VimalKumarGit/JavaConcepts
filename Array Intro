import java.util.Scanner;

public class Array_Intro {
	
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
	
	
	System.out.println("Tell me number of subjects: ");
	Scanner sc = new Scanner(System.in);
	int no = sc.nextInt();
	
	int[] marks = new int[no];
	int total = 0;
	int total_subjects=0;
	
	for(int i=0; i<no; i++)
	{
			
		System.out.println("Please enter Subject"+(i+1)+" marks");
		marks[i] = sc.nextInt();
		total = total + marks[i];
		total_subjects = total_subjects+i;
		
	}
	System.out.println("Total Number of Subjects: "+total_subjects  );
	System.out.println("Total marks is: "+total);
	
	}

}
